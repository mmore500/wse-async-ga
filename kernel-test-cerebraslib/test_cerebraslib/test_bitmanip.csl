fn test_randomize() void {
    random.set_global_prng_seed(1);
    var bitfield = @zeros([2]u16); // Initialize a 2-byte bitfield

    bitmanip.randomize(&bitfield, 0);
    @assert(bitfield[0] == 0);
    @assert(bitfield[1] == 0);

    bitmanip.randomize(&bitfield, 1);
    @assert(bitfield[0] != 0);
    @assert(bitfield[1] == 0);

    bitmanip.randomize(&bitfield, 2);
    @assert(bitfield[0] != 0);
    @assert(bitfield[1] != 0);
}

